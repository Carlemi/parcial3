<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.carlos.pokeapp.Main2Activity"
    android:background="@mipmap/pok">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="53dp"
        android:id="@+id/npc"
        android:background="@android:color/background_light"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginTop="10dp"
        android:id="@+id/pp1"
        android:background="@android:color/background_light"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/njg"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView3"
        android:textStyle="bold"
        android:background="@android:color/background_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:id="@+id/pp2"
        android:background="@android:color/background_light"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@android:drawable/btn_star"
        android:id="@+id/imageView3"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/pp1"
        android:layout_alignEnd="@+id/pp2" />

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@android:drawable/btn_star"
        android:id="@+id/imageView"
        android:layout_height="100dp"
        android:layout_below="@+id/npc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Button
        android:text="GOLPEAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btngolpe"
        android:layout_below="@+id/pp2"
        android:layout_alignEnd="@+id/pp1" />

    <Button
        android:text="Volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:layout_alignBaseline="@+id/btngolpe"
        android:layout_alignBottom="@+id/btngolpe"
        android:layout_toEndOf="@+id/pp1"
        android:layout_marginStart="75dp" />
</RelativeLayout>
